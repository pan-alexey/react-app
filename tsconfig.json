
{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
      
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
      
    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
  },
  "exclude": [
    "**/*.test.*",
    "**/*.spec.*",
    "node_modules",
    "dist",
    "public"
  ],
  "include": [
    "src/index.d.ts",
    "src/**/*",
    "server/**/*"
  ],
}